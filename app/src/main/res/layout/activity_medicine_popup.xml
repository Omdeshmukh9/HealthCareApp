<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Big image -->
    <ImageView
        android:id="@+id/bigImageView"
        android:layout_width="263dp"
        android:layout_height="241dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Big Image"
        android:scaleType="centerCrop"
        android:src="@drawable/meds" />

    <!-- Text view -->
    <TextView
        android:id="@+id/medicineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bigImageView"
        android:layout_centerHorizontal="true"
        android:text="Time to take your medicine!"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Button layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicineTextView"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true">

        <!-- Yes Button -->

        <!-- No Button -->

        <ImageButton
            android:id="@+id/yesButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:contentDescription="Yes"
            android:onClick="onYesButtonClicked"
            android:scaleType="centerCrop"
            android:src="@drawable/right" />

        <ImageButton
            android:id="@+id/noButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="No"
            android:onClick="onNoButtonClicked"
            android:scaleType="centerCrop"
            android:src="@drawable/wrong" />
    </LinearLayout>

</RelativeLayout>
